<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <Button
        android:id="@+id/cameraButton2"
        android:layout_width="53dp"
        android:layout_height="61dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="320dp"
        android:background="@drawable/camera" />

    <Button
        android:id="@+id/refreshbtn"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="320dp"
        android:background="@drawable/update_mocha"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="51dp"
            android:background="@drawable/backgr">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="이름 : "></TextView>

            <EditText
                android:id="@+id/connText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="70dp"
                android:layout_weight="1"
                android:text="Guest"></EditText>

            <Button
                android:id="@+id/connBtn"
                android:layout_width="54dp"
                android:layout_height="49dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="52dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/connect2"
                android:onClick="connBtnClick"></Button>

            <Button

                android:id="@+id/closeBtn"
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/back3"
                android:onClick="connBtnClick"></Button>
        </RelativeLayout>
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="10"
            android:fillViewport="true"
            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgr2">

                <TextView
                    android:id="@+id/text01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:singleLine="false" />
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fae1dd"
            android:gravity="bottom">

            <TextView
                android:id="@+id/textView"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  입력 : " />

            <EditText
                android:id="@+id/chatText"
                android:layout_width="252dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#ececec"
                android:text=""></EditText>

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:background="@drawable/sent"
                android:onClick="connBtnClick"></Button>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

